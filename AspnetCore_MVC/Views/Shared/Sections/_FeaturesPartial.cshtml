@model FeaturesViewModel

<section id="@Model.Id" class="feature">
    <div class="container">
        <div class="title">
            <h1>@Model.Title</h1>
            <p>@Model.Text</p>
        </div>
        <div class="feature-box">
            @if (Model.Features != null)
            {
                foreach (var feature in @Model.Features)
                {
                    <div id="@feature.BoxId" class="features">
                        <img src="@feature.ImageUrl" alt="@feature.AltText">
                        <h5>@feature.Title</h5>
                        <p>@feature.Text</p>
                    </div>
                }
            }
        </div>
    </div>
</section>