@model ShowcaseViewmodel

<section id="@Model.Id" class="showcase">
    <img class="background-img" src="@Model.ShowcaseImg.ImageUrl" alt="@Model.ShowcaseImg.AltText">
    <div class="container">
        <div class="content">
            <h1>@Model.Title</h1>
            <p>@Model.Text</p>
            <a class="btn-theme-s" asp-controller="@Model.Link.ControllerName" asp-action="@Model.Link.ActionName">@Model.Link.Text</a>
            <h6>@Model.BrandText</h6>
            <div class="brands">
                @if (Model.Brands != null)
                {
                    foreach (var brand in @Model.Brands)
                    {
                        <img src="@brand.ImageUrl" alt="@brand.AltText">
                    }
                } 
            </div>
        </div>
    </div>
</section>